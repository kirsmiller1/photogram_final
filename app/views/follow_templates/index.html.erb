<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All follows
    </h1>

    <a href="/follows/new" class="btn btn-block btn-outline-secondary">
      Add a new follow
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "follow_templates/follows_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Status
        </th>

        <th>
          Recipient
        </th>

        <th>
          Sender
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @follows.each do |follow| %>
      <tr>
        <td>
          <%= follow.id %>
        </td>

        <td>
          <%= follow.status %>
        </td>

        <td>
          <% if follow.receiver.present? %>
            <a href="/users/<%= follow.receiver.id %>">
              <%= follow.receiver.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if follow.sender.present? %>
            <a href="/users/<%= follow.sender.id %>">
              <%= follow.sender.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(follow.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(follow.updated_at) %> ago
        </td>

        <td>
          <a href="/follows/<%= follow.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @follows, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
