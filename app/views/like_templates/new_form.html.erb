<h1>
  Add a new like
</h1>


<hr>

<!-- Form like start -->
<form action="/create_like" method="post">
<!-- Form like end -->

  <!-- Label and input for fan_id start -->
  <!-- Input for "fan_id" start -->
  <input type="hidden" name="fan_id" value="<%= current_user.id %>">
  <!-- Input for "fan_id" end -->
  <!-- Label and input for fan_id end -->

  <!-- Label and input for photo_id start -->
  <div class="form-group">
    <label for="photo_id">
      Photo
    </label>

    <!-- Input for photo_id start -->
    <%= select_tag(:photo_id, options_from_collection_for_select(Photo.all, :id, :caption, @like.photo_id), :class => "form-control") %>
    <!-- Input for photo_id end -->
  </div>
  <!-- Label and input for photo_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create like
  </button>
</form>

<hr>

<a href="/likes">
  Go back
</a>
